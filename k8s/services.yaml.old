apiVersion: v1
kind: Service
metadata:
  name: service-a
spec:
  # Ce sélecteur fait le lien avec les Pods qui ont le label "app: service-a"
  selector:
    app: service-a
  ports:
    - protocol: TCP
      port: 8001        # Port exposé dans le cluster
      targetPort: 8001  # Port réel du conteneur (Uvicorn)
---
apiVersion: v1
kind: Service
metadata:
  name: service-b
spec:
  selector:
    app: service-b
  ports:
    - protocol: TCP
      port: 8002
      targetPort: 8002
